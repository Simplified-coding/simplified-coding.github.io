  <style>
    .col-12 {
      margin-left: 15px;
      margin-right: 13px;
      margin-top: 25px;
      margin-bottom: 25px;
      max-width: 750px;
      font-size: 18px;
      font-weight: 400;
    }
    #value {
      padding-left: 0px;
      font-size: 64px;
      font-weight: 700;
    }
    #statistics {
      font-size: 28px;
      font-weight: 700;
    }
    #counter{
      font-size: 64px;
      font-weight: 800;
    }
    .timeline {
      position: absolute;
      max-width: 730px;
      overflow-y: scroll;
      max-height: 750px;
      margin-top: -40.5vw;
      margin-left: -1vw;
    }


    .container {
      padding: 10px 40px;
      position: relative;
      background-color: inherit;
      width: 60%;
    }

    .container::after {
      content: '';
      position: absolute;
      width: 25px;
      height: 25px;
      right: -17px;
      background-color: rgb(94, 135, 200);
      border: 4px solid #88c3ff;
      top: 15px;
      border-radius: 50%;
      z-index: 1;
    }

    .left {
      left: -160px;
    }

    /* Place the container to the right */
    .right {
      left: 28%;
    }

    /* Fix the circle for containers on the right side */
    .right::after {
      left: -17px;
    }

    /* The actual content */
    .content {
      padding: 20px 30px;
      background-color: rgb(180, 200, 255);
      position: relative;
      border-radius: 6px;
    }

    /* Media queries - Responsive timeline on screens less than 600px wide */
    @media screen and (max-width: 100px) {
    /* Place the timelime to the left */
      .timeline::after {
        left: 30px;
      }
    } 
    /* Full-width containers */
      .container {
        width: 57.5%;
        padding-left: 40px;
        padding-right: 40px;
      }

    /* Make sure that all arrows are pointing leftwards */
    .container::before {
      left: 0px;
      border: medium solid white;
      border-width: 10px 10px 10px 0;
      border-color: transparent white transparent transparent;
    }


  </style>



  <script>
    let counts = setInterval(updated);
        let upto = 0;
        function updated() {
            let count = document.getElementById("counter");
            count.innerHTML = ++upto;
            if (upto === 100) {
                clearInterval(counts);
            }
        }
  </script>
