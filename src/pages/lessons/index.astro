---
import Layout from "../../layouts/Layout.astro";

import {getEntry} from "astro:content";
import Language from "../../components/Languages/Language.astro";

const courses = (await getEntry('lessons', 'courses')).data.courses;
---

<Layout>
  <br/>
  <div class="m-3" data-bs-theme="dark">
    <div>
      <h1 class="text-center text-sc-white text-3xl underline font-bold">Μαθήματα</h1>
      <h2 class="text-center text-sc-white text-xl"> Εδω μπορείτε να δείτε τον κατάλογο των μαθημάτων που μπορείτε να κάνετε στην ιστοσελίδα μας. </h2>
    </div>
    {courses.map((c: any) =>
      <div class="m-5">
        <Language data={c}></Language>
      </div>)}
  </div>
  <br/>
</Layout>
